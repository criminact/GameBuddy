<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC8954"
    android:padding="24dp"
    xmlns:attrs="http://schemas.android.com/apk/res-auto"
    tools:context=".invite.FeatureActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="vertical">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/feature_view_pager"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <com.rd.PageIndicatorView
            android:id="@+id/pageIndicatorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:piv_animationType="scale"
            app:piv_dynamicCount="true"
            android:layout_marginTop="-32dp"
            app:piv_interactiveAnimation="true"
            app:piv_selectedColor="#403955"
            app:piv_viewPager="@id/feature_view_pager"
            attrs:piv_padding="12dp"
            attrs:piv_radius="8dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/feature_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/inter_bold"
                android:letterSpacing="0.05"
                android:text="@string/feature_title1"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:layout_marginTop="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/feature_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/feature_title"
                android:fontFamily="@font/karla"
                android:layout_marginTop="18dp"
                android:text="STOP solo queuing and find mates to play with"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/feature_1_skip_button"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/invite_a_friend_textview"
                    android:fontFamily="@font/karla"
                    android:textStyle="bold"
                    android:visibility="invisible"
                    android:layout_marginTop="18dp"
                    android:text="SKIP"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/ahead_feature_btn"
                    android:layout_gravity="end"
                    android:src="@drawable/arrow_ic"
                    app:tint="@color/white"
                    android:background="@drawable/circular_button_bg"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>